<% layout("./layouts/boilerplate.ejs") %>
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><b>edit your listings</b></h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=put" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name=listings[title]  class="form-control" value="<%= listing.title %> " required>
                    <div class="valid-feedback">
                        Title Looks good!
                     </div>
                      <div class="invalid-feedback">
                         Please provide a valid Title.
                       </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listings[description]" class="form-control" cols="30" rows="10" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Please describe description in short.
                    </div>
                </div>
                 <div class="mb-3">
                    original Listing Image <br>
                   <img src="<%= orgImgUrl %>" >
                 </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload new image</label>
                    <input type="file" class="form-control"   name="listings[image]"  >
                    <!-- <div class="invalid-feedback">
                        Please provide a valid img link
                    </div> -->
                </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price"  class="form-label">Price</label>
                    <input type="number" class="form-control" name=listings[price]  value= <%= listing.price  %> required>
                    <div  class="invalid-feedback">
                        Please provide a valid price
                      </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listings[country]" class="form-control" value=" <%= listing.country  %>" required >
                    <div  class="invalid-feedback">
                        Please provide a valid country name
                      </div>
                </div>
            </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listings[location]" class="form-control" value=" <%= listing.location %> " required>
                    <div  class="invalid-feedback">
                        Please provide a valid location
                    </div>
                </div>
                <button class="btn btn-dark btn-edit ">update</button>
            </form>
            
        </div>
    </div>


</body>
